<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scraggle.NewGameActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/sand"/>


    <GridLayout android:id="@+id/grid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:elevation="@dimen/elevation_low"
        android:padding="@dimen/small_board_padding"
        android:columnCount="9"
        android:rowCount="9">

        <GridLayout android:id="@+id/grid1_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/small_board_padding"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:layout_column="0" android:layout_row="0">
        </GridLayout>

        <GridLayout android:id="@+id/grid2_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:elevation="@dimen/elevation_low"
            android:padding="@dimen/small_board_padding"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:layout_column="1" android:layout_row="0">
        </GridLayout>

        <GridLayout android:id="@+id/grid3_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:elevation="@dimen/elevation_low"
            android:padding="@dimen/small_board_padding"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_column="2" android:layout_row="0">
        </GridLayout>

        <GridLayout android:id="@+id/grid4_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:elevation="@dimen/elevation_low"
            android:padding="@dimen/small_board_padding"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_column="0" android:layout_row="1">
        </GridLayout>

        <GridLayout android:id="@+id/grid5_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:elevation="@dimen/elevation_low"
            android:padding="@dimen/small_board_padding"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_column="1" android:layout_row="1">
        </GridLayout>

        <GridLayout android:id="@+id/grid6_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:elevation="@dimen/elevation_low"
            android:padding="@dimen/small_board_padding"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_column="2" android:layout_row="1">
        </GridLayout>

        <GridLayout android:id="@+id/grid7_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:elevation="@dimen/elevation_low"
            android:padding="@dimen/small_board_padding"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_column="0" android:layout_row="2">
        </GridLayout>

        <GridLayout android:id="@+id/grid8_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:elevation="@dimen/elevation_low"
            android:padding="@dimen/small_board_padding"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_column="1" android:layout_row="2">
        </GridLayout>

        <GridLayout android:id="@+id/grid9_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:elevation="@dimen/elevation_low"
            android:padding="@dimen/small_board_padding"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_column="2" android:layout_row="2">
        </GridLayout>



    </GridLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:textSize="10dp"
        android:id="@+id/oops_button"
        android:textStyle="bold|italic"
        android:text="Clear"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/submit_button"
        android:layout_toEndOf="@+id/submit_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id = "@+id/submit_button"
        android:textSize="10dp"
        android:textStyle="bold|italic"
        android:text="Submit"
        android:layout_above="@+id/oops_button"
        android:layout_marginBottom="0dp"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="10dp"
        android:id = "@+id/phaseTwo_button"
        android:text="PhaseTwo"
        android:textStyle="bold|italic"
        android:layout_alignTop="@+id/submit_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="#fafafa"
        android:id="@+id/list_view"
        android:layout_above="@+id/oops_button"
        android:layout_toRightOf="@+id/submit_button"
        android:layout_toEndOf="@+id/submit_button"
        android:textStyle = "bold"
        android:textSize = "40dp"
        android:textColor = "@color/blue_color">
    </ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreboard"
        android:text="0"
        android:textSize="30dp"
        android:layout_above="@+id/mute_box"
        android:textColor="@color/blue_color"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="0dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:text="00:00"
        android:textColor="@color/red_color"
        android:layout_above="@+id/scoreboard"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="0dp"
         />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Mute"
        android:id="@+id/mute_box"
        android:checked="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="0dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp">

        <fragment
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/fragment_new_game2"
            android:layout_marginBottom="0dp"
            class="edu.neu.madcourse.ranchen.scraggle.NewGameActivityFragment"
            tools:layout="@layout/fragment_new_game2"
            />


    </LinearLayout>



    <!-- Control fragment goes here... -->

</RelativeLayout>