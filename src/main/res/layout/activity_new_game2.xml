<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scraggle.NewGameActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/sandy_beach"/>


        <GridLayout android:id="@+id/grid_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:elevation="@dimen/elevation_low"
            android:padding="@dimen/small_board_padding"
            android:columnCount="9"
            android:rowCount="9">

            <GridLayout android:id="@+id/grid1_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="3"
            android:rowCount="3" android:layout_margin="0dp"
            android:layout_column="0" android:layout_row="0">
        </GridLayout>

            <GridLayout android:id="@+id/grid2_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:elevation="@dimen/elevation_low"
                android:padding="@dimen/small_board_padding"
                android:columnCount="3"
                android:rowCount="3"
                android:layout_column="1" android:layout_row="0">
            </GridLayout>

            <GridLayout android:id="@+id/grid3_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:elevation="@dimen/elevation_low"
                android:padding="@dimen/small_board_padding"
                android:columnCount="3"
                android:rowCount="3"
                android:layout_column="2" android:layout_row="0">
            </GridLayout>

            <GridLayout android:id="@+id/grid4_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:elevation="@dimen/elevation_low"
                android:padding="@dimen/small_board_padding"
                android:columnCount="3"
                android:rowCount="3"
                android:layout_column="0" android:layout_row="1">
            </GridLayout>

            <GridLayout android:id="@+id/grid5_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:elevation="@dimen/elevation_low"
                android:padding="@dimen/small_board_padding"
                android:columnCount="3"
                android:rowCount="3"
                android:layout_column="1" android:layout_row="1">
            </GridLayout>

            <GridLayout android:id="@+id/grid6_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:elevation="@dimen/elevation_low"
                android:padding="@dimen/small_board_padding"
                android:columnCount="3"
                android:rowCount="3"
                android:layout_column="2" android:layout_row="1">
            </GridLayout>

            <GridLayout android:id="@+id/grid7_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:elevation="@dimen/elevation_low"
                android:padding="@dimen/small_board_padding"
                android:columnCount="3"
                android:rowCount="3"
                android:layout_column="0" android:layout_row="2">
            </GridLayout>

            <GridLayout android:id="@+id/grid8_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:elevation="@dimen/elevation_low"
                android:padding="@dimen/small_board_padding"
                android:columnCount="3"
                android:rowCount="3"
                android:layout_column="1" android:layout_row="2">
            </GridLayout>

            <GridLayout android:id="@+id/grid9_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:elevation="@dimen/elevation_low"
                android:padding="@dimen/small_board_padding"
                android:columnCount="3"
                android:rowCount="3"
                android:layout_column="2" android:layout_row="2">
            </GridLayout>



        </GridLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oops_button"
        android:text="Clear"
        android:layout_above="@+id/list_view"
        android:layout_centerHorizontal="true" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:id="@+id/list_view"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/grid_layout"
            android:layout_toStartOf="@+id/grid_layout"></ListView>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_Bar"
        android:layout_alignBottom="@+id/list_view"
        android:layout_toRightOf="@+id/list_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreboard"
        android:textSize="50dp"
        android:layout_below="@+id/grid_layout" />

    <!-- Control fragment goes here... -->

</RelativeLayout>