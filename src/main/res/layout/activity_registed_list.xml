<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.neu.madcourse.ranchen.communication.RegistedList">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registorNameLabel"
            android:text="Registration"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/playerNameEditText"
            android:layout_below="@+id/registorNameLabel"
            />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/submit_button"
        android:textSize="12dp"
        android:text="Submit"
        android:layout_below="@+id/playerNameEditText"
        android:layout_alignRight="@+id/playerNameEditText"
        android:layout_alignEnd="@+id/playerNameEditText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit_button"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/opponent_label"
            android:text="All Players:"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/cognitoplayerNameEditText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getPlayerName"
        android:hint="Input Player Name"
        android:layout_below="@+id/submit_button"
        android:layout_marginTop="80dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/getPlayerName"
        android:id="@+id/message_box"
        android:hint="Input Message"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/send_message_button"
        android:text="Send"
        android:layout_alignLeft="@+id/message_box"
        android:layout_below="@+id/message_box"/>

</RelativeLayout>
